pipeline {
    agent any
    stages {
        stage ("Git Checkout") {
            stapes {
                git branch: "main", url: "https://github.com/pns99/santu-appnew.git"
                }
            }
            stage ("Maven Build") {
                  steps {
                      sh "/opt/maven/bin/mvn clean package -DskipTests=true"
                  }
             }
             stage ("Sonar Publish") {
                    steps {
                        withSonarQubeEnv("santusonar"){
                        sh "/opt/maven/bin/mvn sonar:sonar"
                    }
              }
        }
    }
}
